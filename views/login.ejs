<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Book Maniac</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="/stylesheets/bootstrap.min.js"></script>
</head>
<body class="login-page">

   
    
    

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">
                
<img class="login-logo" src="/stylesheets/logo.svg">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>
                                    <% if (messages.error) { %>
                                    <div class="alert alert-danger" role="alert">
                                        <%= messages.error[0] %>
                                    </div>
                                    <% } %>
                                    <% if (typeof success != "undefined" && success) { %>
                                        <div class="alert alert-success" role="alert">
                                            <%= success %>
                                        </div>
                                        <% } %>
                                    <form class="login-form-page" action="/login" method="post">
                                        <input class="form-control" type="text" name="username" placeholder="Username" required>
                                        <input class="form-control" type="password" name="password" placeholder="Password" required>

                                        <a class="small" style="float:right;" href="/reset-password">Forgot password?</a>
                                        <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">Remember
                                                    Me</label>
                                            </div>
                                        <input class="btn login-button btn-primary btn-user btn-block" type="submit" value="Login">
                                    </form>
                                    <hr>
                                   
                                    <div class="text-center">
                                        Donâ€™t have an account? <a class="small" href="/signup">Sign Up</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
    
</body>
</html>