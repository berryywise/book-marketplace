<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - Book Maniac</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="/stylesheets/bootstrap.min.js"></script>
</head>
<body class="password-page">

 <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-lg-6">
                
<img class="login-logo" src="/stylesheets/logo.svg">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-12">
                              <div class="p-5">

    <h2>Forgot your password?</h2>

    <% if (typeof errors != "undefined" && errors && errors.length > 0) { %>
        <div class="error-messages">
          <ul>
            <% errors.forEach(error => { %>
            <div class="alert alert-danger" role="alert">
              <%= error.msg %>
            </div>  
            <% }) %>
          </ul>
        </div>
      <% } %>

    <% if (typeof success != "undefined" && success) { %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
        <% } %>

    <% if (typeof error != "undefined" && error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
        <% } %> 

    <form action="/reset-password" method="post">
        <p>Enter your email address associated with this account and we will send you a link to reset your password.</p>
        <input class="form-control" type="email" name="email" placeholder="Email" required>
        <input class="btn btn-primary" type="submit">
    </form>

    <a href="/login">Back to login</a>

    </div>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
    
</body>
</html>