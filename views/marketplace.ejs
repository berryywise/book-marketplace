<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Marketplace - Book Maniac</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="stylesheets/bootstrap.min.js"></script>
</head>
<body>

    <div class="wrapper-marketplace">

        <div class="sidebar-container">
        <a href="/dashboard"><img class="d-none d-lg-block" src="/stylesheets/logo.svg"></a>
        <% if (typeof user != "undefined" && user.tier) { %>
            <p class="tier"><%= user.tier  %></p>
        <% } %>
        <img class="d-block d-lg-none" src="/stylesheets/favicon.svg">
        <hr class="sidebar-divider my-0">
        <ul>
            <li class="sidebar-card"><a href="/dashboard"><i class="bi bi-bar-chart-fill"></i><span> Dashboard</span></a></li>
            <% if (user && user.isAdmin) { %>
                <li class="sidebar-card">
                  <a href="/adminpanel">
                    <i class="bi bi-person-raised-hand"></i>
                    <span> Admin Panel</span>
                  </a>
                </li>
                <% } %>
            <hr class="sidebar-divider my-0">
            <li class="sidebar-card active"><a href="/marketplace"><i class="bi bi-shop"></i><span> Marketplace</span></a></li>
            <li class="sidebar-card"><a href="/products"><i class="bi bi-list-check"></i><span> Your Products</span></a></li>
            <li class="sidebar-card"><a href="/payout"><i class="bi bi-credit-card-2-back-fill"></i><span> Payout</span></a></li>
            <li class="sidebar-card"><a href="/settings"><i class="bi bi-gear-fill"></i><span> Settings</span></a></li>
            <hr class="sidebar-divider my-0">
            <li class="sidebar-card"><a href="/logout"><i class="bi bi-power"></i><span> Log Out</span></a></li>
        </ul>
    </div>
    
    <div class="marketplace-container">
    
        <div class="marketplace-header">
            <div class="input-box">
                <i class="bi bi-search"></i>
                <form class="input-form" action="/marketplace/search" method="post">
                    <input class="input" id="searchQuery" type="text" name="searchQuery" placeholder="Search Book Title"></input>
                </form>
            </div>
        </div>
        <div class="marketplace-body">
            <% if (categories && categories.length > 0) { %>
                <div class="tags">
                        <% categories.forEach(category => { %>
                          <button class="btn btn-primary"><a href="/marketplace?tag=<%= category._id %>"><%= category._id %>(<%= category.count %>)</a></button>
                        <% }) %>
                        <button class="btn btn-primary"><a href="/marketplace">Clear Filter</a></button>
                </div>
            <% } %>

            <% if (tagged == false) { %>
    
                <% if (monthlyFavorites && monthlyFavorites.length > 0) { %>
                <h3>Monthly favorites</h3>
                <div class="favorites">
    
                        <% monthlyFavorites.forEach(element => { %>
                            <div class="parent col-12 col-lg-4">
                                    
                                <form class="input-form" action="/marketplace/purchase" method="post">
                                    <a class="card-link" href="marketplace/book/<%= element._id %>">
                                    <div class="" id="book-for-sale" style="width: 18rem;">
                
                                        <img class="card-img-top" src="<%= element.thumbnail %>" alt="<%= element.name %>">
                                        <div class="card-body">
                                            <h5 class="card-title"><%= element.name %></h5>
                                            <p class="card-text" id="card_description"><%=element.description%></p>
                                            <p class="card-text">Publisher: <%=element.owner_username%></p>
                                            <p class="card-text card-price">$<%=element.price%></p>
                                            </div>
                                        </div>
                                    </a>
                                    </form>
                                </div>
                                    <% }) %>
                        
                                </div>
                        <% } else{ %>  
                            <h3>No favorites have been picked for this month yet.</h3>
                         <% } %>
                        
                <% } %>


                    <% if (taggedProducts && taggedProducts.length > 0) { %>
                        <% if (tagged == false) { %> <h3>Hot and trending books</h3> <% } 
                        else { %>  
                            <h3>Filtered Books</h3>
                         <% } %>
                        <div class="trending">
            
                                <% taggedProducts.forEach(element => { %>
                                    <div class="parent col-12 col-lg-4">
            
                                        <form class="input-form" action="/marketplace/purchase" method="post">
                                        <a class="card-link" href="marketplace/book/<%= element._id %>">  
                                        <div class="" id="book-for-sale" style="width: 18rem;">
                        
                                                <img class="card-img-top" src="<%= element.thumbnail %>" alt="<%= element.name %>">
                                                <div class="card-body">
                                                    <h5 class="card-title"><%= element.name %></h5>
                                                    <p class="card-text" id="card_description"><%=element.description%></p>
                                                    <p class="card-text">Publisher: <%=element.owner_username%></p>
                                                    <p class="card-text card-price">$<%=element.price%></p>
                
                                                        </div>
                                                        
                                                        </div>
                                                        </a>
                                                        </form>
                                        </div>
                                            <% }) %>
                                
                                <% } else{ %>  
                                    <h3>No books found.</h3>
                                 <% } %>

            </div>
        </div>
    
</div>


</body>
<script src="js/shortentext.js"></script>
<script src="js/searchbar.js"></script>
</html>